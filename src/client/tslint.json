{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "semicolon": false,
    "object-literal-sort-keys": false,
    // Alternative: "object-literal-sort-keys": [true, "match-declaration-order"],
    // <REMOVE_WHEN_POSSIBLE>
    "no-debugger": false,
    "no-console": false,
    "ordered-imports": true
    // "no-duplicate-imports": true
    // "no-inferrable-types": true // Require typings.
    // </REMOVE_WHEN_POSSIBLE>
  }
}
