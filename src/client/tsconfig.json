{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "commonjs", // default: "esnext"
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"], // default: ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false, // default: true
    "noImplicitThis": false, // default: true
    "noImplicitAny": false, // default: true
    "strictNullChecks": false, // default: true
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false // default: true
    // <REMOVE_WHEN_POSSIBLE>
    // "allowSyntheticDefaultImports": true
    // </REMOVE_WHEN_POSSIBLE>
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
